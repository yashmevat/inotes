<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Show Notes</title>
    
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
  
        <link rel="stylesheet" href="/Style.css">
    </head>
<body>

    <nav class="navbar navbar-expand-lg bg-color">
        <a class="navbar-brand" href="/user/dashboard">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/user/dashboard">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/note/show">Show Notes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/user/dashboard">Add Notes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/logout">logout</a>
                </li>
            </ul>
        </div>
      </nav>
      <% if (locals.error_msg != "") { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Error!</strong> <%= error_msg %>.
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>
      <% if (locals.success_msg !="") { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <strong>Success!</strong> <%= success_msg %>.
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>
      <h1 class="text-center mt-3">Your Notes</h1>
    <div class="container">
        <div class="row">
            <% if (notes) { %>
                <% notes.forEach(note=> { %>
                     <div class="col-md-3 col-12 g-3 g-sm-3">
                        <div class="card">
                            <div class="card-body">
                            
                                <h5 class="card-title">
                                  Title : <%= note.title %>
                                </h5>
                                <p class="card-text">
                                  Description : <%= note.description %>
                                </p>
                                <a href="https://inotes-psez.onrender.com/note/delete/<%= note._id %>"><i class="fa-solid fa-trash mx-3" id="deletebtn" myid="<%= note._id %>"></i></a>
                                <a href="https://inotes-psez.onrender.com/note/edit/<%= note._id %>"><i class="fa-solid fa-pen-to-square" id="editbtn" myid="<%= note._id %>"></i></a>

                                <!-- <a href="http://localhost:5500/note/delete/<%= note._id %>"><i class="fa-solid fa-trash mx-3" id="deletebtn" myid="<%= note._id %>"></i></a>
                                <a href="http://localhost:5500/note/edit/<%= note._id %>"><i class="fa-solid fa-pen-to-square" id="editbtn" myid="<%= note._id %>"></i></a> -->
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>
   
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/f08ff56987.js" crossorigin="anonymous"></script>
</body>

</html>